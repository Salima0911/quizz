{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center mt-5">
			<div class="col-md-6">
				<div class="card" id="welcome-card">
					<div class="card-header">
						<h2 class="card-title text-center">Inscrivez-vous!</h2>
					</div>
					<div class="card-body">
						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm) }}
						<div class="form-group text-center">
							<div class="row">
								<div class="col">
									{{ form_label(registrationForm.email, 'Email') }}
									{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email..'}}) }}
								</div>
							</div>
						</div>
						<div class="form-group text-center">
							<div class="row">
								<div class="col">
									{{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
									{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe..'}}) }}
								</div>
							</div>
						</div>
							<div class="form-group text-center">
							<div class="row">
								<div class="col">
									{{ form_label(registrationForm.name, 'Nom') }}
									{{ form_widget(registrationForm.name, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom..'}}) }}
								</div>
							</div>
						<div class="form-group form-check d-flex justify-content-center mt-4 mb-4">
							<div class="row">
								<div class="col">
									{{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
									{{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions', {'label_attr': {'class': 'form-check-label'}}) }}
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-grad">S'inscrire</button>
                        </div>
                        {{ form_end(registrationForm) }}
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endblock %}
