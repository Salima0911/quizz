{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card mt-5" id="welcome-card">
                    <div class="card-header">
                        <h3 class="card-title text-center">Mon Profil</h3>
                    </div>
                    <div class="card-body">
                        <div class="text-center mb-4">
                            {% if user.image %}
                                <img src="{{ asset('uploads/image/' ~ user.image) }}" style='height:100px'>
                            {% else %}
                                <p>Aucune image de profil trouv√©e.</p>
                            {% endif %}
                            <h4 class="mt-3">{{ app.user.name }}</h4>
                            <p class="text-muted">{{ app.user.email }}</p>
                            {% if app.user.scores is not empty %}
                                <h5 class="mt-3">Scores:</h5>
                                <ul>
                                    {% for score in app.user.scores %}
                                        <li>{{ score.value }}</li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p>Pas de scores disponibles.</p>
                            {% endif %}
                        </div>
                        <div class="text-center">
                            <a href="{{ path('app_profile_edit', {'id': user.id}) }}" class="btn btn-grad">Modifier le Profil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
